{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,        // Disable TS6133: unused variables
    "noUnusedParameters": false,    // Disable TS6133: unused parameters
    "noImplicitAny": false,         // Allow implicit any types
    "noImplicitThis": false,        // Allow implicit this
    "noImplicitReturns": true,      // Keep this enabled for safety
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Module Resolution */
    "baseUrl": ".",
    "paths": {
      "@/*": ["client/src/*"]
    }
  },
  "include": ["client/src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
